                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "minecraft.VersionSelectionRequest": {
            "type": "object",
            "required": [
                "core_option",
                "core_type",
                "version"
            ],
            "properties": {
                "core_option": {
                    "type": "string"
